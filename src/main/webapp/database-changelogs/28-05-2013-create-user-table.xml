<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <preConditions>
        <runningAs username="root"/>
    </preConditions>

    <changeSet id="1" author="Danil">
        <createTable tableName="user">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Danil">
        <addColumn tableName="user">
            <column name="password" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <createIndex indexName="user_password"
                     tableName="user"
                     tablespace="user_password"
                     unique="true">
            <column name="name" type="varchar(200)"/>
            <column name="password" type="varchar(250)"/>
        </createIndex>
    </changeSet>

    <changeSet id="3" author="Danil">
        <addColumn tableName="user">
            <column name="surname" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="patronymic" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="date_of_birth" type="DATE">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="email" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="phone_number" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="passport_serial" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="passport_number" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="passport_date" type="DATE">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="passport_issued_by" type="varchar(250)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="registered_address" type="varchar(250)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="residence_address" type="varchar(250)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="Danil">
        <addColumn tableName="user">
            <column name="global_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="confirmed" type="BIT" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="user">
            <column name="login" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <createIndex indexName="user_login"
                     tableName="user"
                     tablespace="user_login"
                     unique="true">
            <column name="login" type="varchar(250)"/>
        </createIndex>
    </changeSet>

    <changeSet id="5" author="Danil">
        <dropIndex indexName="user_password"
                   tableName="user"/>
    </changeSet>

    <changeSet id="6" author="Danil">
        <addColumn tableName="user">
            <column name="role" type="varchar(10)" defaultValue="USER">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>